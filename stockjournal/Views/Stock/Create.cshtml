<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="idFrmStock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Stock.Id" />       
            <div class="form-group">
                @*<label asp-for="Stock.TransType" class="control-label"></label>
