            </div>
            <div class="form-group">
                <label asp-for="Stock.Ticker" class="control-label"></label>
                <input asp-for="Stock.Ticker" class="form-control" />
                <span asp-validation-for="Stock.Ticker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.StopLoss" class="control-label"></label>
                <input asp-for="Stock.StopLoss" class="form-control" />
                <span asp-validation-for="Stock.StopLoss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.TransDate" class="control-label"></label>
                <input asp-for="Stock.TransDate" class="form-control" />
                <span asp-validation-for="Stock.TransDate" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Stock.StockUserId" class="control-label"></label>
                <input asp-for="Stock.StockUserId" class="form-control" value ="@Model.userJournalId" />
                <span asp-validation-for="Stock.StockUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" id="idSubmitForm"/>
            </div>
        </form>
    </div>
</div>

