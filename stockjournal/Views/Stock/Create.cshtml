                    <option value="SELL">SELL</option>
                </select>*@
                <select asp-for ="Stock.TransType" asp-items="Model.transTypes"class="dropdown-content"></select>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Amount" class="control-label"></label>
                <input asp-for="Stock.Amount" class="form-control" />
                <span asp-validation-for="Stock.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.NumShares" class="control-label"></label>
                <input asp-for="Stock.NumShares" class="form-control" />
                <span asp-validation-for="Stock.NumShares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.StockName" class="control-label"></label>
